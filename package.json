{
    "name": "open-league-displays",
    "version": "0.0.1",
    "main": "dist-electron/main/index.js",
    "description": "An open-source cross-platform league displays",
    "author": "Konstantinos Petrakis",
    "license": "MIT",
    "private": true,
    "keywords": [
        "electron",
        "vue3",
        "vue",
        "wallpaper",
        "league of legends",
        "lol"
    ],
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-builder",
        "preview": "vite preview",
        "reset": "Remove-Item -Path './dist', './dist-electron', './distribute' -Recurse -Force -ErrorAction SilentlyContinue; npx prisma migrate reset && npx prisma db push && Get-ChildItem -Path './public/images' -Include *.jpg -Recurse | Remove-Item -Force && Get-ChildItem -Path './public/images/thumbnails' -Recurse | Where-Object {$_.PSIsContainer -and @(Get-ChildItem $_.FullName).Count -eq 0} | Remove-Item -Recurse -Force"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.0.0",
        "electron": "^22.3.4",
        "electron-builder": "^23.6.0",
        "prisma": "^4.11.0",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vite-plugin-electron": "^0.11.1",
        "vite-plugin-electron-renderer": "^0.12.1",
        "vue": "^3.2.45",
        "vue-tsc": "^1.0.24"
    },
    "dependencies": {
        "@prisma/client": "^4.11.0",
        "electron-is-dev": "^2.0.0",
        "fast-folder-size": "^1.7.1",
        "node-fetch": "^2.6.9",
        "sharp": "^0.32.0",
        "sqlite3": "^5.1.4",
        "vue-router": "^4.1.6",
        "wallpaper": "^6.1.1"
    },
    "prisma": {
        "schema": "storage/schema.prisma"
    },
    "build": {
        "productName": "Open League Displays",
        "win": {
            "icon": "./public/favicon.ico"
        },
        "nsis": {
            "uninstallDisplayName": "Open League Displays"
        },
        "mac": {
            "icon": "./public/favicon.ico",
            "category": "public.app-category.utilities"
        },
        "directories": {
            "output": "distribute"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "extraResources": [
            "storage/**/*",
            "node_modules/.prisma/**/*",
            "node_modules/@prisma/client/**/*"
        ],
        "asar": false
    }
}
